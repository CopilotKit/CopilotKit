environment: "{{ .Values.environment }}"

app:
  name: coagents-routing

deployments:
  - name: coagents-routing-ui
    type: ui
    image:
      repository: "058264219587.dkr.ecr.us-east-1.amazonaws.com/coagents:coagents-routing-ui"
      tag: "{{ .Values.globalImageTag }}"
    port: 3000
    command: ["npm", "start", "--", "-H", "0.0.0.0", "--port", "3000"]
    livenessProbe:
      httpGet:
        path: /
        port: 3000
    config:
      secretsJson: {{ fetchSecretValue "ref+awssecrets://demos/coagents-research-canvas/ui/secrets" }}
      env:
        - name: REMOTE_ACTION_URL
          value: "https://coagents-routing-agent-fastapi-prv-{{ .Values.environment }}.copilotkit-previews.com/copilotkit"
    outputs:
      type: ui
      dependencies: local
      description: "CoAgents Routing"
  
  - name: coagents-routing-agent-fastapi
    type: agent
    image:
      repository: "058264219587.dkr.ecr.us-east-1.amazonaws.com/coagents:coagents-routing-agent-python-local-deps"
      tag: "{{ .Values.globalImageTag }}"
    port: 8000
    livenessProbe:
      httpGet:
        path: /health
        port: 8000
    config:
      secretsJson: {{ fetchSecretValue "ref+awssecrets://demos/coagents-research-canvas/agent/secrets" }}
      env:
        - name: HOST
          value: "0.0.0.0"
    outputs:
      type: agent-fastapi
      dependencies: local

  - name: coagents-routing-agent-lgc-python
    type: agent
    image:
      repository: "058264219587.dkr.ecr.us-east-1.amazonaws.com/coagents:coagents-routing-agent-python-local-deps"
      tag: "{{ .Values.globalImageTag }}"
    port: 8000
    livenessProbe:
      httpGet:
        path: "/store/items?key=test&namespace=test"
        port: 8000
    command: ["/bin/sh", "-c","langgraph dev --no-browser --port=8000 --config=langgraph.json --host=0.0.0.0 --n-jobs-per-worker 1"]
    config:
      secretsJson: {{ fetchSecretValue "ref+awssecrets://demos/coagents-research-canvas/agent/secrets" }}
      env:
        - name: HOST
          value: "0.0.0.0"
    outputs:
      type: agent-lgc-python
      dependencies: local

  - name: coagents-routing-agent-lgc-js
    type: agent
    image:
      repository: "058264219587.dkr.ecr.us-east-1.amazonaws.com/coagents:coagents-routing-agent-js-remote-deps"
      tag: "{{ .Values.globalImageTag }}"
    port: 8000
    livenessProbe:
      httpGet:
        path: "/store/items?key=test&namespace=test"
        port: 8000
    config:
      secretsJson: {{ fetchSecretValue "ref+awssecrets://demos/coagents-research-canvas/agent/secrets" }}
      env:
        - name: HOST
          value: "0.0.0.0"
    outputs:
      type: agent-lgc-js
      dependencies: remote
