{
  "name": "@copilotkit/voice",
  "version": "1.51.4-next.6",
  "description": "Voice services for CopilotKit (transcription, text-to-speech, etc.)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && rollup -c rollup.config.mjs",
    "prepublishOnly": "pnpm run build",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@copilotkitnext/eslint-config": "workspace:*",
    "@copilotkitnext/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.30.0",
    "tsup": "^8.5.0",
    "typescript": "5.8.2",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@copilotkitnext/runtime": "workspace:*",
    "openai": "^5.9.0"
  },
  "engines": {
    "node": ">=18"
  }
}
