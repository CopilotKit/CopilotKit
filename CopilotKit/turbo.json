{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "^generate-graphql-schema",
        "generate-graphql-schema",
        "^graphql-codegen",
        "graphql-codegen"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build",
        "graphql-codegen:watch",
        "^graphql-codegen:watch"
      ],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**",
        "!.next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "check-types": {
      "dependsOn": [
        "^build"
      ]
    },
    "generate-graphql-schema": {
      "cache": false,
      "outputs": [
        "packages/runtime/__snapshots__/schema/schema.graphql"
      ]
    },
    "graphql-codegen": {
      "cache": false,
      "dependsOn": [
        "^generate-graphql-schema"
      ],
      "outputs": [
        "packages/runtime-client-gql/src/@generated/**/*"
      ]
    },
    "graphql-codegen:watch": {
      "cache": false,
      "outputs": [
        "packages/runtime-client-gql/src/@generated/**/*"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
